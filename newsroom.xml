---
layout: null
permalink: /newsroom.xml
---

<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0">
  <channel>
    <title>{{ site.title }} â€“ Newsroom</title>
    <link>{{ site.url }}/newsroom/</link>
    <description>Combined feed of press releases and media coverage from {{ site.title }}</description>
    <lastBuildDate>{{ site.time | date_to_rfc822 }}</lastBuildDate>
    <language>en-us</language>

    {% assign all_items = site.press | concat: site.media %}
    {% assign sorted = all_items | sort: "date" | reverse %}

    {% for item in sorted %}
    {% assign link = item.external_url | default: item.url %}

    <item>
      <title>{{ item.title | xml_escape }}</title>
      <link>{{ link }}</link>
      <guid>{{ link }}</guid>
      <pubDate>{{ item.date | date_to_rfc822 }}</pubDate>
      <description>{{ item.summary | xml_escape }}</description>

      {% if item.tags %}
      <category>
        {% for tag in item.tags %}
          {{ tag | xml_escape }}
        {% endfor %}
      </category>
      {% endif %}
    </item>
    {% endfor %}
  </channel>
</rss>
